{
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{%", "close": "%}" },
    { "open": "{{", "close": "}}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<p>", "close": "</p>" },
    { "open": "<b>", "close": "</b>" },
    { "open": "<i>", "close": "</i>" },
    { "open": "<u>", "close": "</u>" },
    { "open": "<sub>", "close": "</sub>" },
    { "open": "<sup>", "close": "</sup>" },
    { "open": "<h1>", "close": "</h1>" },
    { "open": "<h2>", "close": "</h2>" },
    { "open": "<a>", "close": "</a>" },
    { "open": "<font>", "close": "</font>" },
    { "open": "<tr>", "close": "</tr>" },
    { "open": "<td>", "close": "</td>" },
    { "open": "<th>", "close": "</th>" },
    { "open": "<table>", "close": "</table>" }
  ],
  "surroundingPairs": [
    { "open": "{%", "close": "%}" },
    { "open": "{{", "close": "}}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<p>", "close": "</p>" },
    { "open": "<b>", "close": "</b>" },
    { "open": "<i>", "close": "</i>" },
    { "open": "<u>", "close": "</u>" },
    { "open": "<sub>", "close": "</sub>" },
    { "open": "<sup>", "close": "</sup>" },
    { "open": "<h1>", "close": "</h1>" },
    { "open": "<h2>", "close": "</h2>" },
    { "open": "<a>", "close": "</a>" },
    { "open": "<font>", "close": "</font>" },
    { "open": "<tr>", "close": "</tr>" },
    { "open": "<td>", "close": "</td>" },
    { "open": "<th>", "close": "</th>" },
    { "open": "<table>", "close": "</table>" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "(<([a-zA-Z0-9]+)([^/>]*)?>|\\{%(\\s)*(if|for|fori|capture|locale|stripnewlines)[^%]*%})",
    "decreaseIndentPattern": "(</([a-zA-Z0-9]+)>|\\{%(\\s)*end(if|for|fori|capture|locale|stripnewlines)[^%]*%})"
  },
  "onEnterRules": [
  {
    "beforeText": "(<([a-zA-Z0-9]+)([^/>]*)?>|\\{%(\\s)*(if|for|fori|capture|locale|stripnewlines)[^%]*%})",
    "afterText": "(</([a-zA-Z0-9]+)>|\\{%(\\s)*end(if|for|fori|capture|locale|stripnewlines)[^%]*%})",
    "action": { "indent": "indentOutdent" }
  },
  {
    "beforeText": "(<([a-zA-Z0-9]+)([^/>]*)?>|\\{%(\\s)*(if|for|fori|capture|locale|stripnewlines)[^%]*%})",
    "action": { "indent": "indent" }
  }
]
}